{
    "require": {
        "psr/container": "1.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit",
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml.dist",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml.dist",
        "phpcs:report": "vendor/bin/phpcs --standard=phpcs.xml.dist --report=summary",
        "phpcs:full": "vendor/bin/phpcs --standard=phpcs.xml.dist --report=full",
        "verify-strict": "./scripts/verify-strict-comparison.sh",
        "verify-yoda": "./scripts/verify-yoda-conditions.sh"
    }
}

{
    "name": "etchfusion/suite",
    "description": "Etch Fusion Suite - End-to-end migration and orchestration toolkit with PSR-4 autoloading.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.1",
        "psr/container": "^2.0",
        "firebase/php-jwt": "^7.0",
        "woocommerce/action-scheduler": "^3.8"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.1",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "yoast/phpunit-polyfills": "^4.0",
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.12 || ^2.0",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "brianhenryie/strauss": "^0.26",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Bricks2Etch\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bricks2Etch\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Etch Fusion Suite Contributors"
        }
    ],
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "brianhenryie/strauss": true
        },
        "audit": {
            "block-insecure": false
        }
    },
    "extra": {
        "strauss": {
            "target_directory": "vendor-prefixed",
            "namespace_prefix": "EtchFusionSuite\\Vendor\\",
            "classmap_prefix": "EFS_Vendor_",
            "packages": [
                "firebase/php-jwt",
                "woocommerce/action-scheduler",
                "psr/container"
            ],
            "delete_vendor_files": false
        }
    },
    "scripts": {
        "post-install-cmd": ["@php -r \"if (file_exists('vendor/bin/strauss')) { passthru('vendor/bin/strauss'); }\""],
        "post-update-cmd": ["@php -r \"if (file_exists('vendor/bin/strauss')) { passthru('vendor/bin/strauss'); }\""],
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml.dist",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml.dist",
        "phpcs:report": "vendor/bin/phpcs --standard=phpcs.xml.dist --report=summary",
        "phpcs:full": "vendor/bin/phpcs --standard=phpcs.xml.dist --report=full",
        "phpstan": "vendor/bin/phpstan analyse",
        "verify-strict": "./scripts/verify-strict-comparison.sh",
        "verify-yoda": "./scripts/verify-yoda-conditions.sh",
        "verify-hooks": "./scripts/verify-hook-prefixing.sh",
        "verify-datetime": "./scripts/verify-datetime-functions.sh",
        "verify-phpcs": "./scripts/verify-phpcs-compliance.sh",
        "install-hooks": "./scripts/install-git-hooks.sh --force",
        "test": [
            "@php -r \"if (!is_dir('build/logs')) { mkdir('build/logs', 0777, true); }\"",
            "@php -r \"if (!is_dir('build/coverage/html')) { mkdir('build/coverage/html', 0777, true); }\"",
            "@php vendor/bin/phpunit -c phpunit.xml.dist --testsuite unit,wordpress,integration,ui,performance --log-junit build/logs/junit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage/html"
        ],
        "test:unit": "@php vendor/bin/phpunit -c phpunit.xml.dist --testsuite unit",
        "test:integration": "@php vendor/bin/phpunit -c phpunit.xml.dist --testsuite integration",
        "test:wordpress": "@php vendor/bin/phpunit -c phpunit.xml.dist --testsuite wordpress",
        "test:ui": "@php vendor/bin/phpunit -c phpunit.xml.dist --testsuite ui",
        "test:performance": "@php vendor/bin/phpunit -c phpunit.xml.dist --testsuite performance",
        "test:coverage": "@test"
    }
}
